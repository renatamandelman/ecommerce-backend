<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1 class="bg-success-subtle p-2 text-center text-success w-100">CODER COMMERCE</h1>
  <section class="m-3 w-100 d-flex justify-content-evenly flex-wrap align-items-center">
    {{#each products}}
    <div class="card" style="width: 18rem;">
      <img src={{this.image}} class="card-img-top" alt={{this.title}}>
      <div class="card-body py-1 px-2">
        <h5 class="card-title py-1">{{this.title}}</h5>
        <a href="/product/{{this._id}}" class="btn btn-success py-1 px-2">+info</a>
      </div>
    </div>
    {{/each}}
  </section>
</main>